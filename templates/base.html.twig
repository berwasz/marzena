<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}{{'Apartments'|trans}} Marzena{% endblock %}</title>
        <meta http-equiv="Content-type" content="charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>

            <header>
                <nav id="navbar" class="navbar fixed-top navbar-expand-lg bg-transparent p-0" style="height:68px">
                    <div class="nawigacja container-fluid d-flex flex-row p-0 shadow">
                    
                            <div class="navbar-brand d-flex align-items-center z-1">
                            <img src="{{ asset ('images/logo_marzena.png')}}" width="60" height="60" alt="Logo" title="{{'Apartments'|trans}} Marzena" class="d-inline-block align-text-top ms-1 me-1">
                                <span style="color:black">{{'Apartments'|trans}} Marzena</span>
                            </div>
                            
                            <div class="d-flex justify-content-end">
                                <div id="nav-icon3" class="navbar-toggler me-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </div>
                            </div>
                        
                        <div class="collapse navbar-collapse flex-grow-1 text-center" id="navbarNav">
                            <ul class="navbar-nav ms-auto flex-nowrap">
                                {# <li class="nav-item">
                                    <a href="#" class="nav-link"><i class="bi bi-house-door"></i></a>
                                </li> #}
                                <li id="start-up" class="nav-item">
                                    <a href="#start" title="{{'Home'|trans}}" class="nav-link">{{'Home'|trans}}</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#oferta" title="{{'Apartments'|trans}}" class="nav-link">{{'Apartments'|trans}}</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#galeria" title="{{'Gallery'|trans}}" class="nav-link">{{'Gallery'|trans}}</a>
                                </li>
                                {# <li class="nav-item">
                                    <a href="#cennik" title="Cennik" class="nav-link">Cennik</a>
                                </li>
                                <li class="nav-item">
                                    <a href="#rejestracja" title="Rejestracja" class="nav-link">Rejestracja</a>
                                </li> #}
                                <li class="nav-item">
                                    <a href="#kontakt" title="{{'Contact'|trans}}" class="nav-link">{{'Contact'|trans}}</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link-lang dropdown-toggle" href="#" id="dropdown-language" role="button"
                                        data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <img width="20px" style="padding-bottom:3px" src="https://flagcdn.com/{{app.request.locale == 'en' ? 'gb' : app.request.locale}}.svg"></img>
                                        {{ app.request.locale|locale_name(app.request.locale)|u.title }}
                                    </a>
                                    <ul id="lang-dropdown" class="dropdown-menu border-0" aria-labelledby="dropdown-language">
                                        <li>
                                            <a class="dropdown-item" href="{{ path('app_homepage', {_locale: 'en'}) }}">
                                            <img width="20px" style="padding-bottom:3px" src="https://flagcdn.com/gb.svg"></img> English
                                            </a>
                                        </li>
                                        <li><a class="dropdown-item" href="{{ path('app_homepage', {_locale: 'it'}) }}">
                                            <img width="20px" style="padding-bottom:3px" src="https://flagcdn.com/it.svg"></img> Italiano
                                            </a>
                                        </li>
                                        <li><a class="dropdown-item" href="{{ path('app_homepage', {_locale: 'pl'}) }}">
                                            <img width="20px" style="padding-bottom:3px" src="https://flagcdn.com/pl.svg"></img> Polski
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>

        {% block body %}{% endblock %}
    </body>
</html>
